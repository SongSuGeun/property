  </tr>
  <tr>
    <td><%= f.label :Title %></td> 
    <td><%= f.text_field :title, :id => 'title' %></td>
  </tr>
  <tr>
    <td><%= f.label :Content %></td> 
    <td><%= f.text_area(:content, size: '50x10', :class => 'text_area', :id => 'content' ) %></td>
