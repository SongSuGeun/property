<script language='javascript'>
function sub(){
  if($("#title").val() === null || $("#title").val() == ''){  
    alert("タイトルを入力してください。")
    return false;
  }  
  else if($("#content").val() == null || $("#content").val() == ''){  
    alert("コンテンツを入力してください。")
    return false;
  }
};
</script>
