
<script language='javascript'>
$(document).ready(function(){
  $('#tokyoku').hide();
  $('#oosakaku').hide();
});
function tokyo(){
  $('#tokyoku').show();
  $('#oosakaku').hide();
};
function oosaka(){
  $('#oosakaku').show();
  $('#tokyoku').hide();
};
function sub(){
   if($('#injapanTOKYO').is(':checked')) {
     $('#oosakaku').remove();
     return true;
   }
   else if($('#injapanOOSAKA').is(':checked')){
     $('#tokyoku').remove();
     return true;
   }
   else{
     alert("地域を選択してください。"); 
     return false;
   }
};

function GooglemapGuide(){
  window.open( './googlemap.html','','width=700,height=800,scrollbars=yes,toolbar=no,menubar=no,status=no,resizable=yes')
}

</script>
<%= form_with(model: @propertys, local: true, url: choose_new_or_edit, method: 'post') do |f| %>
